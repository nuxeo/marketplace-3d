<project name="3d-funkload-tests" default="run-funkload-tests" xmlns:nx="urn:nuxeo-build" xmlns:artifact="urn:nuxeo-artifact">
  <taskdef resource="org/nuxeo/build/antlib.xml" uri="urn:nuxeo-build" />
  <taskdef resource="org/nuxeo/build/artifact/antlib.xml" uri="urn:nuxeo-artifact" />
  <taskdef resource="net/sf/antcontrib/antlib.xml" />

  <property name="out.dir" value="${maven.project.build.directory}" />
  <unzip dest="${out.dir}/" overwrite="false">
    <artifact:resolveFile key="org.nuxeo:nuxeo-ftest::zip" />
  </unzip>
  <import file="${out.dir}/nuxeo-ftest.xml" />

  <property name="mp.install" value="file:${out.dir}/nuxeo-marketplace-jsf-ui-${nuxeo.distribution.version}.zip,
    file:${out.dir}/marketplace-${nuxeo.dam.nxr.version}.zip,
    file:${out.dir}/marketplace-3d-${maven.project.version}.zip" />
  <target name="prepare-environment" depends="_init,prepare-db,prepare-tomcat">
    <copy todir="${out.dir}">
      <artifact:file key="org.nuxeo.ecm.distribution:nuxeo-marketplace-jsf-ui::zip" />
      <artifact:file key="org.nuxeo.marketplace.dam:marketplace::zip" />
      <artifact:file key="org.nuxeo.marketplace.threed:marketplace-3d::zip" />
    </copy>
  </target>

  <!-- Funkload tests to run -->
  <property name="funkload-tests" value="
        test_sample.py[testAvailable]
    " />

  <!-- Those shouldn't be there but needs to be changed both in the conf files and the builds at the same time -->
  <target name="make-legacy-dirs">
    <mkdir dir="../../target/ftest/funkload/log" />
    <mkdir dir="../../target/ftest/funkload/report" />
  </target>

</project>
